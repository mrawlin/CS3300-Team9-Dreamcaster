<h1> New Dream Entry </h1>

<%= form_for :dream, url: dreams_path do |f| %>
     <p>
        <%= f.label :"Describe your dream in a few single words" %><br><br>
        <%= f.text_field :title, size: 50 %>
     </p>

     <p>
        <%= f.label :"Tell us about your dream..." %><br><br>
        <%= f.text_area :text, cols:49, rows:20%>
     </p>

     <p>
         <%= f.submit %>
     </p>

<% end %>
