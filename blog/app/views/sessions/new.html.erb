
<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path, :class => "form-inline")  do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, :id => "usr_email", class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, :id => "usr_password", class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
      <span style="font-size: 20px"><%= f.check_box :remember_me%>&nbsp; Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in", :id => "login_btn", class: "btn btn-primary btn-lg" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
